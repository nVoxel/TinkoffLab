<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize30Percent" parent="">
        <item name="cornerSize">30%</item>
    </style>

    <style name="Widget.TinkoffLab.SelectableChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/background_selectable_chip</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/text_selectable_chip</item>
    </style>

    <style name="CardView.Default">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/cardview_background</item>
    </style>

    <style name="Widget.TinkoffLab.CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/md_theme_background</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.TinkoffLab.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/continue_button</item>
        <item name="android:textColor">@color/black_fixed</item>
    </style>

    <style name="Widget.TinkoffLab.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/default_chip_background</item>
        <item name="android:textColor">@color/white_fixed</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="colorPrimary">@color/bottom_nav_selected</item>
        <item name="colorSecondary">@color/bottom_nav_not_selected</item>
    </style>

    <style name="section_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="change_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/change_text</item>
    </style>

    <style name="CancelAlertDialog" parent="@style/ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/CancelAlertDialog.ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CancelAlertDialog.ButtonStyle</item>
        <item name="android:background">@color/alert_dialog_background</item>
        <item name="android:dialogPreferredPadding">24dp</item>
    </style>

    <style name="CancelAlertDialog.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alert_dialog_button</item>
    </style>

    <style name="RoundedExtendedFloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

</resources>
